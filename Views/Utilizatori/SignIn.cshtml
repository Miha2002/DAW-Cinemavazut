@model Proiect_DAW_Cinemavazut.Models.Utilizatori

@{
    ViewData["Title"] = "Create";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/StyleLogic.css" />
</head>

<div style="margin: 30px 10px 30px 10px">
    <a class="inactive underlineHover" asp-controller="Utilizatori" asp-action="Create"> Sign Up </a>
    <a class="active" asp-controller="Utilizatori" asp-action="SignIn"> Sign In </a>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="SignIn">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="email" class="control-label"></label>
                <input asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="parola" class="control-label"></label>
                <input type="password" asp-for="parola" class="form-control" />
                <span asp-validation-for="parola" class="text-danger"></span>
            </div>

            <div style="margin: 10px 0px 20px 0px">
                <input type="checkbox" id="rememberMe" name="rememberMe"/>
                <label for="rememberMe"> Remember me </label>
            </div>
           
            <div class="create" style="margin: 30px 10px 30px 10px; ">
                <input type="submit" value="SignIn" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Inapoi Acasa</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
